
  {% if site.news != blank %}
    {% assign news_size = site.news | size %}
        {% assign news = site.news | reverse %}
         {% assign sorted_news = news | sort: 'importance'  %} 
        {% if include.limit and site.announcements.limit %}
          {% assign news_limit = site.announcements.limit %}
        {% else %}
          {% assign news_limit = news_size %}
        {% endif %}
        {% for item in sorted_news limit: news_limit %}
         
          {% if item.show != false %}
            <div class="new_item">
              {% if item.img %}
                {%
                  include figure.liquid
                  loading="eager"
                  path=item.img
                  sizes = "250px"
                  alt="item thumbnail"
                  class="card-img-top"
                %}
              {% endif %}
              <div class="new_item_card-body">
                <a href="{{ item.url | relative_url }}">
                <h2 class="new_item_card-title">{{ item.title }}</h2>
                </a>
                <p class="new_item_card-text">{{ item.description }}</p>
                {% comment %} 临时隐藏日期显示
                <div class="new_item_time"> {{ item.date | date: '%b %d, %Y' }}</div>
                {% endcomment %}
              </div>
            </div>
          {% endif %}
         
        {% endfor %}
       


  {% endif %}



    


